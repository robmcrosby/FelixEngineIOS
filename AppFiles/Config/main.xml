
<ObjViewer>
  <Resources>
    <Shader name="texture" vert="texture.vert" frag="texture.frag"/>
    <Shader name="fill" vert="fill.vert" frag="texture.frag"/>
    <Texture name="green" src="green.png" filters="mip"/>
    <Texture name="red" src="red.png" filters="mip"/>
  </Resources>
  <View name="MainView">
    <Pipeline name="MainPipeline">
      <clear>0, 0, 0, 1</clear>
      <pass>MainView</pass>
    </Pipeline>
    <Object3d name="plane" pass="MainView">
      <Transform>
        <pos>0, 0, 0</pos>
        <scale>128, 128, 1</scale>
      </Transform>
      <Shader name="texture"/>
      <Mesh name="plane"/>
      <Texture name="green"/>
    </Object3d>
  </View>
</ObjViewer>
