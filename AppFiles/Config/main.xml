
<ObjViewer>
   <Resources>
      <Shader name="texture" vert="texture.vert" frag="texture.frag"/>
      <Mesh name="bunny" src="bunny.obj"/>
      <Texture name="grid" src="grid.png"/>
      <FrameBuff name="fbo1" flags="fixed">
         <size>1024,1024</size>
         <Texture name="fbo1" type="RGBA"/>
      </FrameBuff>
   </Resources>
   <Pipeline name="pipeline">
      <frame>fbo1</frame>
      <clear>0, 0, 1, 1</clear>
      <pass>main</pass>
      <frame>final</frame>
      <clear>0, 0, 0, 1</clear>
      <pass>screen</pass>
   </Pipeline>
   <Camera flags="abs">
      <pos>0, 0, 20</pos>
      <target>0, 0, 0</target>
      <up>0, 1, 0</up>
      <pass>main</pass>
   </Camera>
   <Camera>
      <pos>0, 0, 20</pos>
      <target>0, 0, 0</target>
      <up>0, 1, 0</up>
      <pass>screen</pass>
   </Camera>
   <Object3d name="bunny" pass="main">
      <pos>0, -5, 0</pos>
      <Shader name="texture"/>
      <Mesh name="bunny"/>
      <Texture name="grid"/>
   </Object3d>
   <Object3d name="plane" pass="screen">
      <Transform>
         <pos>0, 0, 0</pos>
         <scale>10</scale>
      </Transform>
      <Shader name="texture"/>
      <Mesh name="plane"/>
      <Texture name="fbo1"/>
   </Object3d>
</ObjViewer>
